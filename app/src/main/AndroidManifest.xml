<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodtracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectIngsForApi"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecipeIng"
            android:screenOrientation="portrait"/>
        <activity android:name=".ResultsIngs"
            android:screenOrientation="portrait"/>
        <activity android:name=".SearchIngs"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditableIngsData"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditIngs"
            android:screenOrientation="portrait"/>
        <activity android:name=".AvailableIng"
            android:screenOrientation="portrait"/>
        <activity android:name=".DisplayIng"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegisterIng"
            android:screenOrientation="portrait"/>
        <activity android:name=".FragmentStarter"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>